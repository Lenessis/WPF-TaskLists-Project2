<Window x:Class="TasksList.Category.CategoryMainPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TasksList.Category"
        mc:Ignorable="d"
        Title="CategoryMainPage" Height="720" Width="1280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Kategorie" FontSize="45px" HorizontalAlignment="Center" Padding="10" Margin="10"/>

        <ListBox Grid.Row="1" Margin="10"/>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1" Padding="10,5" Margin="10" FontSize="20"> Dodaj </Button>
            <Button Grid.Column="2" Padding="10,5" Margin="10" FontSize="20"> Edytuj </Button>
            <Button Grid.Column="3" Padding="10,5" Margin="10" FontSize="20"> Usuń </Button>
            
        </Grid>

    </Grid>
</Window>
